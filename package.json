{
    "name": "infer-args",
    "type": "module",
    "version": "1.0.0",
    "description": "Tiny, type-safe CLI argument parser for Node.js with zero dependencies and strong type inference.",
    "keywords": [
        "cli",
        "argv",
        "parser",
        "arguments",
        "options",
        "flags",
        "typescript",
        "type-safe",
        "inference",
        "zero-dependency",
        "minimal"
    ],
    "author": "devvictrix <dev.victrix@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/devvictrix/infer-args#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devvictrix/infer-args.git"
    },
    "bugs": {
        "url": "https://github.com/devvictrix/infer-args/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
        "format": "prettier --write .",
        "prepublishOnly": "npm test && npm run build"
    },
    "dependencies": {},
    "peerDependencies": {},
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.2",
        "tsup": "^8.2.3",
        "typescript": "^5.8.3"
    }
}